<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/main">

    <!-- Header with User Name and Edit Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            android:layout_marginRight="10dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OliviaD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/new_msg"
            android:contentDescription="Edit Profile" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contacts Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textStyle="bold"
                android:textColor="#6B4F36"
                android:paddingStart="16dp"
                android:textSize="18dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- Search Bar -->
            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Search for friends"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@null"
                android:drawableEnd="@drawable/search_icon"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- In Contacts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Contacts"
                android:textStyle="bold"
                android:textColor="#6B4F36"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:textSize="16dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- Contact List Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/story_3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Henry School"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:paddingStart="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chat_icon"
                    android:contentDescription="Chat Icon" />
            </LinearLayout>

            <!-- Invite New Friends Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite New Friends"
                android:textStyle="bold"
                android:textColor="#6B4F36"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <!-- Invite Friend List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/my_pfp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amy Wesley"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:paddingStart="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Invite"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/vanish_chat_bubble"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            layout="@layout/activity_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
