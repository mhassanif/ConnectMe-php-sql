<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#4C3E30"/>

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- White dotted border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"
        android:dashWidth="6dp"
        android:dashGap="4dp"/>
</shape>
